<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="utensilstore.css">
    <link rel="stylesheet" href="css/all.min.css">
    <link rel="stylesheet" href="css/all.css">
    <title>register</title>
</head>
<body>
    <div class="img-container">
        <div class="form-box">
            <h1 id="sign-title">sign up</h1>
            <form action="/register" id=    "signupForm" method="POST">
                <div class="input-group">
                    <%if (error && error.length >0){%>
                        <div class="error-message">
                            <%= error%>
                        </div> 
                         <%}%>
                    <div class="input-field" id="name-field">
                        <i class="fa-solid fa-user"></i>
                        <input type="text" name="name" placeholder="Name" id="text">
                       </div>
                       <div class="input-field">
                           <i class="fa-solid fa-envelope"></i>
                           <input type="email" name="email" placeholder="email address" id="email">
                          </div>
       
                          <div class="input-field">
                           <i class="fa-solid fa-lock"></i>
                           <input type="password" name="password" placeholder="password" id="password">
                          </div>
                          <div class="input-field">
                            <i class="fa fa-address-card"></i>
                            <input type="text" name="address" placeholder="address" id="address">
                           </div>
                </div>  
                <div class="btn-field">
                    <button type="submit" id="signup-btn" >sign up</button>
                    <button type="button" id="signin-btn"  class="disable"  onclick="redirectTOlogin()">sign in</button>
                   </div>
            </form>
        </div>
    </div>
    <script>
        function redirectTOlogin() {
            window.location.href = '/login';
        }
    </script>
</body>
</html>